% Get coordinates of ith vertex
% i getvertex
/getvertex {
	% i on stack
	/theta exch 360 mul p div def
	theta cos radius mul ctr_x add
	theta sin radius mul ctr_y add
} def

% Defaults
/radius 200 def
/ctr_x 306 def
/ctr_y 396 def

% p  drawpaley
/drawpaley {

	/p exch def

	newpath
	
	0 1 p 1 sub {
		/i exch def
		1 1 p 1 sub 2 idiv {
			/j exch dup mul i add p mod def
			% Only draw "forward" edges so that each edge is only drawn once
			j i gt {
				i getvertex moveto
				j getvertex lineto
			} if
		} for
	} for
	
	stroke
	
} def

17 drawpaley

showpage
